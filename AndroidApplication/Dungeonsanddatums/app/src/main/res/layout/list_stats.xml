<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_statAttribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingRight="8dp"
        android:text="strength"
        app:layout_constraintBottom_toBottomOf="@+id/b_statPlus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/b_statPlus" />

    <TextView
        android:id="@+id/tv_statScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:paddingRight="8dp"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@+id/b_statPlus"
        app:layout_constraintTop_toTopOf="@+id/tv_statAttribute" />

    <Button
        android:id="@+id/b_statPlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:paddingRight="8dp"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/b_statMinus"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/b_statMinus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_plus"
        android:layout_width="7dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="+"
        app:layout_constraintEnd_toStartOf="@+id/b_statPlus"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toEndOf="@+id/tv_statScore"
        app:layout_constraintTop_toTopOf="@+id/tv_statScore" />

    <TextView
        android:id="@+id/tv_statModifier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="4dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/b_statPlus"
        app:layout_constraintStart_toEndOf="@+id/tv_plus"
        app:layout_constraintTop_toTopOf="@+id/tv_plus" />
</android.support.constraint.ConstraintLayout>