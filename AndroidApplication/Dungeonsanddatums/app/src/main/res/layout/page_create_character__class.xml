<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dungeonsanddatums.dungeonsanddatums.Page_Character_stats"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:id="@+id/spinner_ClassSelect"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent" />

    <ExpandableListView
        android:id="@+id/elv_classDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_ClassSelect" />

    <Spinner
        android:id="@+id/spinner_subClassSelect"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@id/elv_classDetails" />

    <ExpandableListView
        android:id="@+id/elv_subclassDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/spinner_subClassSelect"/>

</android.support.constraint.ConstraintLayout>